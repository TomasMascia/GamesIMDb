rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regla para la colección de usuarios
    match /users/{userId} {
      // 1. Un usuario solo puede leer y escribir su PROPIO documento.
      // 2. Verificamos que el ID del documento coincida con el UID de la cuenta (request.auth.uid).
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Si en el futuro agregas una colección de "Reseñas Públicas", podrías poner:
    // match /reviews/{reviewId} {
    //   allow read: if true; // Cualquiera puede leerlas
    //   allow write: if request.auth != null; // Solo usuarios logueados pueden escribir
    // }
  }
}